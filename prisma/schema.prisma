// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
  // url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Post {
  id          String  @id @default(uuid())
  title       String
  text        String
  isPublished Boolean @default(false)
}

model Imovel {
  id          String  @id @default(uuid())
  title       String
  slug        String
  url         String  // Link do imovel
  description String
  amount      Float // Valor do imovel
  websiteId  String
  website    Website @relation(fields: [websiteId], references: [id])

  type        String? // Tipo do imovelTerreno, apartamento, casa
  image       String? // Imagem do imovel
  size        String? // Tamanho em metros quadrados
  status      String? // Status atual do imovel (extrajudicial, etc)
}

model Website {
  id         String  @id @default(uuid())
  name       String
  baseUrl    String
  slug       String
  isActive   Boolean @default(true)
  pages      Page[]
  imoveis    Imovel[]
}

model Page {
  id         String  @id @default(uuid())
  relativeUrl       String
  website    Website @relation(fields: [websiteId],references: [id])
  websiteId  String
}
